SELECT *
FROM layoffs_staging2;

-- Which company has highest number of lay_off
SELECT *
FROM layoffs_staging2
ORDER BY total_laid_off DESC;

-- Total lay-off by country and year
SELECT  country, YEAR(`date`) AS `year`, SUM(total_laid_off) AS total_laid_off
FROM layoffs_staging2
GROUP BY `year`, country
ORDER BY 3 DESC;

-- Number of lay off by company
SELECT company, SUM(total_laid_off) AS total;

-- Number of lay off by industry
SELECT industry, SUM(total_laid_off) AS total
FROM layoffs_staging2
GROUP BY industry
ORDER BY 2 DESC;


-- Total rolling lay off by month-year
WITH Rolling_Total AS
(
SELECT SUBSTRING(`date`,1,7) AS `MONTH`, SUM(total_laid_off) AS total
FROM layoffs_staging2
WHERE SUBSTRING(`date`,1,7) IS NOT NULL
GROUP BY `MONTH`
ORDER BY 1 ASC
)
SELECT `MONTH`, total, SUM(total) OVER(ORDER BY `MONTH`) AS rolling_total
FROM Rolling_Total;

-- Top 5 companies that laid off by year
WITH 
Company_Year (company, years, total_laid_off) AS  
(
SELECT company, YEAR(`date`), SUM(total_laid_off)
FROM layoffs_staging2
GROUP BY company, YEAR(`date`)
), 
Company_Year_Rank AS
(SELECT *, DENSE_RANK() OVER(PARTITION BY years ORDER BY total_laid_off DESC) AS Ranking
FROM Company_Year
WHERE years IS NOT NULL
)
SELECT *
FROM Company_Year_Rank 
WHERE Ranking <= 5
